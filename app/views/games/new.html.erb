<div class="container">
  <h1 class="text-center">New Game</h1>

  <ul class="letter-box text-center">
    <% @letters.each do |letter| %>
        <li><%= letter %></li>
    <%end%>
  </ul>

  <h2 class="text-center">What is the longest word you could find? </h2>

  <div class="d-flex justify-content-center">
    <div class="w-50">
      <form action="/score" method="post" data-turbo="false" class="mb-3">

        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters%>

          <div class="d-flex">
            <input type="text" name="mot" class="form-control mb-3">
            <input type="submit" value="Play" class="btn btn-primary mb-3">
          </div>

      </form>
    </div>
  </div>

</div>
